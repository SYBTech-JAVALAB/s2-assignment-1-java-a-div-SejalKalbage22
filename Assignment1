package assignment1_26044;
import java.util.Scanner;

class Books {
    String title;
    String author;
    double price;
    String ISBN;
    int stock;
    
    

    void Display() {
        System.out.println("Book's Name : " + title);
        System.out.println("Author : " + author);
        System.out.println("Price : " + price);
        System.out.println("ISBN : " + ISBN);
        System.out.println("Stock : " + stock);
        System.out.println();
    }

    void Availability() {
        if (stock > 0) {
            System.out.println("The Book :" + title + " is Available");
        } else {
            System.out.println("The Book :" + title + " Not available");
        }
    }

    void restock(int amt) {
        stock = stock + amt;
        System.out.println("The Book : " + title + " now has stock: " + stock);
        System.out.println();
    }

    void Add_discount(double per) {
        price = price - price * (per / 100);
        System.out.printf("The discount applied to book : %s. Final price: $%.2f%n", title, price);
    }
}

public class ASS1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Create books
        Books b1 = new Books();
        b1.title = "Animal Farm";
        b1.author = "George Orwell";
        b1.price = 500;
        b1.ISBN = "tfftuyuyty6";
        b1.stock = 0;

        Books b2 = new Books();
        b2.title = "Harry Potter";
        b2.author = "J.K. Rowling";
        b2.price = 450;
        b2.ISBN = "98jjj87";
        b2.stock = 11;

        Books b4 = new Books();
        b4.title = "A Tale of Two Cities";
        b4.author = "Charles Dickens";
        b4.price = 900;
        b4.ISBN = "kok89890hh";
        b4.stock = 18;

        Books b5 = new Books();
        b5.title = "Geetanjali";
        b5.author = "Rabindranath Tagore";
        b5.price = 754;
        b5.ISBN = "hh898hn";
        b5.stock = 8;

        // Put books in an array for easier handling
        Books[] inventory = {b1, b2, b4, b5};

        int choice;
        do {
            System.out.println("\nMenu:");
            System.out.println("1. Display Books");
            System.out.println("2. Check Availability");
            System.out.println("3. Restock Book");
            System.out.println("4. Apply Discount");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();

            switch (choice) {
                case 1:
                    for (int i = 0; i < inventory.length; i++) {
                        System.out.println("Book #" + (i + 1));
                        inventory[i].Display();
                    }
                    break;

                case 2:
                    for (Books book : inventory) {
                        book.Availability();
                    }
                    break;

                case 3:
                    System.out.print("Choose book number to restock (1-" + inventory.length + "): ");
                    int restockChoice = sc.nextInt();
                    if (restockChoice >= 1 && restockChoice <= inventory.length) {
                        System.out.print("Enter restock amount: ");
                        int amt = sc.nextInt();
                        inventory[restockChoice - 1].restock(amt);
                    } else {
                        System.out.println("Invalid book number.");
                    }
                    break;

                case 4:
                    System.out.print("Choose book number to apply discount (1-" + inventory.length + "): ");
                    int discountChoice = sc.nextInt();
                    if (discountChoice >= 1 && discountChoice <= inventory.length) {
                        System.out.print("Enter discount percentage: ");
                        double percent = sc.nextDouble();
                        inventory[discountChoice - 1].Add_discount(percent);
                    } else {
                        System.out.println("Invalid book number.");
                    }
                    break;

                case 5:
                    System.out.println("Thank you!");
                    break;

                default:
                    System.out.println("Invalid choice");
                    break;
            }
        } while (choice != 5);

        sc.close();
    }
}
